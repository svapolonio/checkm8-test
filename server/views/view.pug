doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
    title= title

    link(rel="stylesheet"
      
      type="text/css"
      integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO"
      crossorigin="anonymous")
    link(rel="stylesheet" href="/mystyle.css")
    //- link(rel="stylesheet" href="/fontawesome.css")

  body
    nav.navbar.navbar-expand-lg.navbar-dark.bg-primary
      a.navbar-brand(href='#') Checkm8
      button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarColor01', aria-controls='navbarColor01', aria-expanded='false', aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarColor01.collapse.navbar-collapse
        ul.navbar-nav.mr-auto
          li.nav-item.active
            a.nav-link(href='#')
              | Home 
              span.sr-only (current)


    main#myVue(role="main" class="container")
      .row.mt-5(v-for="i in data")
        .col-md-4
          .border.border-secondary
            img.mx-auto.d-block(src="/images/questionmark.jpg" alt="checkmate" height="250" width="250")
          h1.mt-3 {{ i.name }}

        .col-md-8
          h5 Description: {{ i.description }}
          p
          label.text-primary Quantity:
          .input-group
              input.form-control.form-control-sm#qty(type="text" name="quantity")
              .input-group-append
                button.btn.btn-outline-primary.btn-sm(type="button") +
                button.btn.btn-outline-secondary.btn-sm(type="button") -
          button.btn.btn-outline-primary.mt-3(type="button") Buy Product
          

    script(src="/axios.min.js")
    script(src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js")
    script(src="/myvue.js")
