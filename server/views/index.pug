doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
    title= title

    link(rel="stylesheet"
      
      type="text/css"
      integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO"
      crossorigin="anonymous")
    link(rel="stylesheet" href="/mystyle.css")
    //- link(rel="stylesheet" href="/fontawesome.css")

  body
    nav.navbar.navbar-expand-lg.navbar-dark.bg-primary
      a.navbar-brand(href='#') Navbar
      button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarColor01', aria-controls='navbarColor01', aria-expanded='false', aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarColor01.collapse.navbar-collapse
        ul.navbar-nav.mr-auto
          li.nav-item.active
            a.nav-link(href='#')
              | Home 
              span.sr-only (current)
          li.nav-item
            a.nav-link(href='#') Products


    main#myVue(role="main" class="container")
      h1.mt-5#pageTitle Checkm8s Online Shopping
      .row
        .col-md-4
          .card.border-secondary
            .card-title.mt-3.ml-3.h3.text-primary Add Product
            .card-body
              form#addProductForm(action="/" method="POST")
                .form-group
                  label.text-primary Product Name
                  input.form-control.form-control-sm#name(type="text" name="name" v-model="name")
                .form-group
                  label.text-primary Description
                  textarea.form-control.form-control-sm#description(rows="3" name="description" v-model="description")
                .form-group
                  label.text-primary Product Quantity
                  input.form-control.form-control-sm#qty(type="text" name="qty" v-model="qty")
                .form-group
                  button.btn.btn-outline-primary.btn-sm(type="button") Add Product
                  | 
                  button.btn#clearBtn.btn-sm.btn-outline-secondary(type="button" v-on:click="clear") Clear
        .col-md-8
          table.table#notesTable
            tr.text-primary
              th ID
              th Name
              th Description
              th Quantity
              th Actions
            tr(v-for="product in products")
              td {{ product.id }}
              td {{ product.name }}
              td {{ product.description }}
              td {{ product.qty }}
              td
                button.btn.btn-sm.btn-outline-primary(v-on:click="deleteNote(note)") View
          
    script(src="/axios.min.js")
    script(src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js")
    script(src="/myvue.js")
